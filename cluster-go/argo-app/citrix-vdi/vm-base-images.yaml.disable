apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: vm-base-images
  namespace: openshift-gitops
  labels:
    virtualization: core
spec:
  destination:
    name: in-cluster
  project: citrix-vdi
  source:
    directory:
      jsonnet: {}
      recurse: true
    path: cluster-go/vm-base-images
    repoURL: https://github.com/joelapatatechaude/ocluster
  syncPolicy:
    syncOptions:
      - Prune=true
      - CreateNamespace=true
